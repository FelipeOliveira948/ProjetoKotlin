<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.gallery.GalleryFragment">

    <Button
        android:id="@+id/buttonAlunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue"
        android:text="ALUNOS"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonResponsaveis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue"
        android:text="RESPONSÁVEIS"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue"
        android:text="TURMAS"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonEscola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/blue"
        android:text="ESCOLAS"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/buttonCondutores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="FUNCIONÁRIOS"
        android:textColor="@android:color/black" />

</LinearLayout>